                <button id="nav-logs" onclick="switchTab('logs')"
                    class="nav-btn w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-colors text-muted"
                    title="Logs Système">
                    <i class="fas fa-terminal w-5 text-center text-base shrink-0"></i>
                    <span class="sidebar-label">Logs Système</span>
                </button>
                <button id="nav-history" onclick="switchTab('history')"
                    class="nav-btn w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium transition-colors text-muted"
                    title="Historique">
                    <i class="fas fa-history w-5 text-center text-base shrink-0"></i>
                    <span class="sidebar-label">Historique</span>
                </button>
            </div>
        </nav>

        <!-- Footer -->
        <div class="sidebar-footer p-4 border-t border-border flex items-center gap-3 bg-panel/50">
            <div class="shrink-0 relative">
                <span class="block w-2.5 h-2.5 rounded-full bg-emerald-500 pulse-green"></span>
            </div>
            <div class="sidebar-footer-text min-w-0">
                <p class="text-xs text-white font-medium truncate">
                    <%= models.length %> modèles actifs
                </p>
                <p class="text-[10px] text-muted truncate">Mode: <%= mode==='auto' ? 'Automatique' : 'Manuel' %>
                </p>
            </div>
        </div>
    </aside>
