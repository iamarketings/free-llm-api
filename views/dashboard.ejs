        class="w-64 min-h-screen bg-surface flex flex-col border-r border-border z-30 flex-shrink-0
    fixed lg:relative top-0 left-0 h-full lg:translate-x-0 -translate-x-full transition-transform lg:transition-[width]">

        <!-- Logo -->
        <div class="h-16 flex items-center px-4 border-b border-border flex-shrink-0 gap-3">
