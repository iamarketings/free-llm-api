            <div class="shrink-0 relative">
                <span class="block w-2.5 h-2.5 rounded-full bg-emerald-500 pulse-green"></span>
            </div>
            <div class="sidebar-footer-text min-w-0">
                <p class="text-xs text-white font-medium truncate">
                    <%= models.length %> mod√®les actifs
                </p>
                <p class="text-[10px] text-muted truncate">Mode: <%= mode==='auto' ? 'Automatique' : 'Manuel' %>
                </p>
            </div>
        </div>
    </aside>

    <!-- ======= MAIN ======= -->
    <div class="flex-1 flex flex-col min-w-0 overflow-hidden">

        <!-- ======= TOP HEADER ======= -->
        <header
            class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 sm:px-6 gap-4 flex-shrink-0 z-10">
            <div class="flex items-center gap-3 min-w-0">
                <!-- Hamburger / collapse toggle -->
                <button onclick="toggleSidebar()" title="Menu"
                    class="h-9 w-9 rounded-lg flex items-center justify-center text-gray-500 hover:bg-gray-100 hover:text-gray-900 transition-colors">
                    <i class="fas fa-bars text-base"></i>
                </button>
                <!-- Breadcrumb -->
                <div class="hidden sm:flex items-center gap-2 text-sm text-gray-500">
                    <span class="text-gray-300">/</span>
                    <span id="breadcrumb" class="font-medium text-gray-800">Vue d'ensemble</span>
                </div>
            </div>

            <div class="flex items-center gap-2 sm:gap-3">
                <!-- Sync status -->
                <% if (last_sync) { %>
                    <span class="hidden md:flex items-center gap-1.5 text-xs text-gray-400">
                        <i class="far fa-clock text-gray-300"></i>
                        Sync: <span class="font-mono text-gray-500">
                            <%= last_sync %>
                        </span>
                    </span>
                    <% } %>

                        <!-- Mode badge -->
                        <span
                            class="hidden sm:inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border
                <%= mode==='auto' ? 'bg-emerald-50 border-emerald-200 text-emerald-700' : 'bg-amber-50 border-amber-200 text-amber-700' %>">
                            <span
                                class="w-1.5 h-1.5 rounded-full <%= mode==='auto' ? 'bg-emerald-500' : 'bg-amber-500' %>"></span>
                            <%= mode==='auto' ? 'Auto' : 'Manuel' %>
                        </span>

                        <!-- Refresh -->
                        <form action="/refresh" method="POST">
                            <button type="submit" <%=syncing ? 'disabled' : '' %>
                                class="h-9 px-3 sm:px-4 rounded-lg bg-white border border-gray-200 text-gray-600
                                hover:bg-gray-50 hover:text-brand-600 text-sm font-medium flex items-center gap-2
                                transition shadow-sm disabled:opacity-50">
                                <i class="fas fa-sync-alt text-sm <%= syncing ? 'fa-spin' : '' %>"></i>
                                <span class="hidden sm:inline">Refresh</span>
                            </button>
                        </form>
            </div>
        </header>

        <!-- ======= CONTENT AREA ======= -->
        <main class="flex-1 overflow-y-auto custom-scroll bg-gray-50">

            <!-- =========================================== -->
            <!-- TAB: DASHBOARD                              -->
            <!-- =========================================== -->
            <div id="tab-dashboard" class="tab-pane active p-4 sm:p-6 lg:p-8 gap-6">

                <!-- KPIs -->
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                    <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
                        <div class="flex items-center justify-between mb-3">
                            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Total Requ√™tes</p>
                            <div class="h-8 w-8 rounded-lg bg-blue-50 flex items-center justify-center"><i
                                    class="fas fa-globe text-blue-500 text-sm"></i></div>
                        </div>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= stats.success + stats.errors %>
                        </p>
                        <p class="text-xs text-gray-400 mt-1">depuis le d√©marrage</p>
                    </div>
                    <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
                        <div class="flex items-center justify-between mb-3">
                            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Taux de Succ√®s</p>
                            <div class="h-8 w-8 rounded-lg bg-emerald-50 flex items-center justify-center"><i
                                    class="fas fa-check-circle text-emerald-500 text-sm"></i></div>
                        </div>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= stats.success + stats.errors> 0 ? Math.round(stats.success / (stats.success +
                                stats.errors) * 100) : 100 %>%
                        </p>
                        <p class="text-xs text-gray-400 mt-1">
                            <%= stats.errors %> erreur(s)
                        </p>
                    </div>
                    <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
                        <div class="flex items-center justify-between mb-3">
                            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Mod√®les Actifs</p>
                            <div class="h-8 w-8 rounded-lg bg-indigo-50 flex items-center justify-center"><i
                                    class="fas fa-server text-indigo-500 text-sm"></i></div>
                        </div>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= models.length %>
                        </p>
                        <p class="text-xs text-emerald-600 font-medium mt-1">En ligne</p>
                    </div>
                    <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
                        <div class="flex items-center justify-between mb-3">
                            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Latence Moy.</p>
                            <div class="h-8 w-8 rounded-lg bg-amber-50 flex items-center justify-center"><i
                                    class="fas fa-bolt text-amber-500 text-sm"></i></div>
                        </div>
                        <% let avgLat=models.length> 0
                            ? (models.reduce((a,m) => a + (m.lastTest ? m.lastTest.latency : 0), 0) / models.length /
                            1000).toFixed(2)
                            : '0.00'; %>
                            <p class="text-2xl font-bold text-gray-900">
                                <%= avgLat %>s
                            </p>
                            <p class="text-xs text-gray-400 mt-1">temps moyen</p>
                    </div>
                </div>

                <!-- Model Table -->
                <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                    <div
                        class="px-5 py-4 border-b border-gray-100 flex flex-wrap items-center justify-between gap-3 bg-gray-50/70">
                        <div>
                            <h2 class="font-semibold text-gray-900">Catalogue de Mod√®les</h2>
                            <p class="text-xs text-gray-400 mt-0.5">
                                <%= models.length %> mod√®les disponibles
                            </p>
                        </div>
                        <div class="relative">
                            <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-xs"></i>
                            <input type="text" placeholder="Filtrer..." id="model-filter"
                                class="h-9 w-44 sm:w-60 pl-9 pr-4 text-sm border border-gray-200 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition"
                                oninput="filterModels(this.value)">
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left text-sm">
                            <thead
                                class="bg-gray-50 border-b border-gray-200 text-xs text-gray-500 uppercase tracking-wider">
                                <tr>
                                    <th class="px-5 py-3 font-semibold min-w-[180px]">Mod√®le</th>
                                    <th class="px-5 py-3 font-semibold min-w-[120px]">Score</th>
                                    <th class="px-5 py-3 font-semibold text-right col-latency">Latence</th>
                                    <th class="px-5 py-3 font-semibold text-center col-context">Contexte</th>
                                    <th class="px-5 py-3 font-semibold text-right min-w-[110px]">Action</th>
                                </tr>
                            </thead>
                            <tbody id="model-table-body" class="divide-y divide-gray-100">
                                <% if (models.length===0) { %>
                                    <tr>
                                        <td colspan="5" class="px-5 py-16 text-center">
                                            <div class="flex flex-col items-center gap-3 text-gray-400">
                                                <i class="fas fa-inbox text-4xl text-gray-300"></i>
                                                <p class="text-sm">
                                                    <%= syncing ? 'R√©cup√©ration en cours...'
                                                        : 'Aucun mod√®le disponible.' %>
                                                </p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } else { %>
                                        <% models.forEach(function(m) { %>
                                            <tr data-model-id="<%= m.id %>"
                                                class="hover:bg-gray-50/80 transition-colors group <%= fixed_model === m.id ? 'bg-blue-50/60' : '' %>">
                                                <td class="px-5 py-3">
                                                    <div class="flex items-center gap-3">
                                                        <div
                                                            class="h-9 w-9 rounded-lg bg-gray-100 border border-gray-200 flex items-center justify-center
                                            font-mono text-xs text-gray-500 group-hover:border-brand-200 group-hover:text-brand-600 transition-colors shrink-0">
                                                            <%= m.id.substring(0,2).toUpperCase() %>
                                                        </div>
                                                        <div class="min-w-0">
                                                            <p class="font-semibold text-gray-900 truncate max-w-[160px] sm:max-w-[220px]"
                                                                title="<%= m.id %>">
                                                                <%= m.id.split('/').pop() %>
                                                            </p>
                                                            <p
                                                                class="text-xs text-gray-400 truncate max-w-[160px] sm:max-w-[220px]">
                                                                <%= m.id.split('/')[0] %>
                                                            </p>
                                                        </div>
                                                        <% if (fixed_model===m.id) { %>
                                                            <span
                                                                class="shrink-0 px-2 py-0.5 rounded-full text-[10px] font-bold bg-brand-100 text-brand-700 border border-brand-200">ACTIF</span>
                                                            <% } %>
                                                    </div>
                                                </td>
                                                <td class="px-5 py-3">
                                                    <% let score=(m.lastTest && m.lastTest.avgScore) || 0; let
                                                        barColor=score> 80 ? 'bg-emerald-500' : score > 50 ?
                                                        'bg-amber-400' : 'bg-gray-300'; %>
                                                        <div class="flex items-center gap-2">
                                                            <span
                                                                class="font-mono text-xs text-gray-700 w-7 text-right shrink-0">
                                                                <%= score %>
                                                            </span>
                                                            <div
                                                                class="h-1.5 w-20 bg-gray-100 rounded-full overflow-hidden">
                                                                <div class="h-full rounded-full <%= barColor %>"
                                                                    style="width:<%= score %>%"></div>
                                                            </div>
                                                        </div>
                                                </td>
                                                <td
                                                    class="px-5 py-3 text-right font-mono text-xs text-gray-500 col-latency">
                                                    <%= m.lastTest && m.lastTest.latency ?
                                                        (m.lastTest.latency/1000).toFixed(2) : '‚Äî' %>s
                                                </td>
                                                <td class="px-5 py-3 text-center col-context">
                                                    <span
                                                        class="inline-block px-2 py-0.5 rounded bg-gray-100 text-gray-600 text-xs border border-gray-200 font-mono">
                                                        <%= Math.floor(m.context_length / 1000) %>k
                                                    </span>
                                                </td>
                                                <td class="px-5 py-3 text-right">
                                                    <% if (fixed_model !==m.id) { %>
                                                        <form action="/config" method="POST">
                                                            <input type="hidden" name="mode" value="manual">
                                                            <input type="hidden" name="model_id" value="<%= m.id %>">
                                                            <button type="submit"
                                                                class="h-8 px-3 rounded-lg border border-gray-200 text-xs font-medium text-gray-600
                                                hover:border-brand-400 hover:text-brand-700 hover:bg-brand-50 bg-white transition shadow-sm">
                                                                S√©lectionner
                                                            </button>
                                                        </form>
                                                        <% } else { %>
                                                            <form action="/config" method="POST">
                                                                <input type="hidden" name="mode" value="auto">
                                                                <button type="submit"
                                                                    class="h-8 px-3 rounded-lg bg-brand-600 text-white text-xs font-medium flex items-center gap-1.5 ml-auto hover:bg-brand-700 transition shadow-sm">
                                                                    <i class="fas fa-check text-xs"></i> Actif
                                                                </button>
                                                            </form>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Table Footer -->
                    <div
                        class="px-5 py-3 border-t border-gray-100 bg-gray-50/50 flex items-center justify-between text-xs text-gray-400">
                        <span id="model-count">
                            <%= models.length %> mod√®le(s) affich√©(s)
                        </span>
                        <span class="font-mono">
                            <%= syncing ? '‚ü≥ synchronisation...' : '‚úì √† jour' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- =========================================== -->
            <!-- TAB: SETTINGS                               -->
            <!-- =========================================== -->
            <div id="tab-settings" class="tab-pane p-4 sm:p-6 lg:p-8 gap-6">
                <div class="max-w-3xl w-full mx-auto space-y-6">

                    <!-- Routing -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
                            <h3 class="font-semibold text-gray-900">Routage & S√©lection de Mod√®le</h3>
                            <p class="text-xs text-gray-500 mt-0.5">Contr√¥le la fa√ßon dont les requ√™tes sont
                                distribu√©es.</p>
                        </div>
                        <div class="p-6">
                            <form action="/config" method="POST"
                                class="flex flex-col sm:flex-row items-start sm:items-end gap-4">
                                <div class="flex-1 w-full">
                                    <label class="block text-sm font-medium text-gray-700 mb-1.5">Mode de
                                        fonctionnement</label>
                                    <select name="mode"
                                        class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none bg-white">
                                        <option value="auto" <%=mode==='auto' ?'selected':'' %>>‚ö° Automatique ‚Äî Fallback
                                            + Load Balancing</option>
                                        <option value="manual" <%=mode==='manual' ?'selected':'' %>>üîí Manuel ‚Äî Mod√®le
                                            fixe unique</option>
                                    </select>
                                    <p class="text-xs text-gray-400 mt-1.5">En mode auto, si un mod√®le √©choue, le
                                        syst√®me bascule automatiquement sur le suivant.</p>
                                </div>
                                <button type="submit" name="action" value="mode"
                                    class="shrink-0 h-10 px-5 bg-brand-600 text-white text-sm font-medium rounded-lg hover:bg-brand-700 transition shadow-sm">
                                    Appliquer
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Performance -->
                    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50">
                            <h3 class="font-semibold text-gray-900">Performance & R√©silience</h3>
                            <p class="text-xs text-gray-500 mt-0.5">Seuils de tol√©rance aux pannes et fr√©quence de
                                synchronisation.</p>
                        </div>
                        <div class="p-6">
                            <form action="/config" method="POST">
                                <input type="hidden" name="action" value="advanced_settings">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                                    <div>
                                        <label
                                            class="flex items-center justify-between text-sm font-medium text-gray-700 mb-2">
                                            <span>Intervalle de Refresh</span>
